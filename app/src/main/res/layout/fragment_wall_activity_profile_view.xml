<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6cbab8b8"
    tools:context=".WallActivityProfileView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/internetyes">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/temp">
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:civ_border_width="2dp"
                android:id="@+id/profileImage"
                app:civ_border_color="@android:color/white"
                app:civ_fill_color="@android:color/white"
                android:layout_marginTop="25dp"
                android:elevation="5dp"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="40dp"
                android:ellipsize="none"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profileImage"
                android:id="@+id/linear"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:id="@+id/Score"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:text=" , "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:id="@+id/profileName"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/linear"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:id="@+id/profileUsername"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profileUsername"
                android:background="@drawable/edit_profile_corner"
                android:layout_marginBottom="25dp"
                android:elevation="2dp"
                android:layout_marginTop="20dp"
                android:id="@+id/holder"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:background="@drawable/settings_selector3"
                    android:paddingTop="5dp"
                    android:id="@+id/settingsText">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:elevation="2dp"
                        android:tint="#454444"
                        android:contentDescription="@null"
                        android:src="@drawable/setting_new"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="#454444"
                        android:text="@string/settings"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:background="@drawable/settings_selector2"
                    android:paddingTop="5dp"
                    android:id="@+id/EditText">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:elevation="2dp"
                        android:contentDescription="@null"
                        android:tint="#454444"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/edituser"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="#454444"
                        android:text="@string/edit_profile"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/temp"
            android:id="@+id/curve"
            android:elevation="10dp"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            android:src="@drawable/curve" />
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/curve"
            android:layout_marginTop="20dp"
            android:id="@+id/ProfileRecycler"/>
        <LinearLayout
            android:id="@+id/lastPostclickable"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/splash_screensignup_button"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lastImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hearts"/>

            <TextView
                android:id="@+id/like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginStart="5dp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/white"
        android:id="@+id/internet">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="no_internet_connection.json"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:id="@+id/text"
            android:textAlignment="center"
            android:shadowRadius="5"
            android:textColor="#bb969393"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:text="@string/no_internet_connection"/>
    </RelativeLayout>
</FrameLayout>